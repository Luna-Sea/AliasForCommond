echo "set service name"
read name
mkdir -p "/etc/${name}"
echo "set service file path"
read -r file
echo "set service configtag"
read -r configtag
echo "set service config name"
read -r config
touch "/etc/${name}/${config}"


cat << EOF >> "/etc/systemd/system/${name}.service"

[Unit]
Description=${name}
After=network.target

[Service]
ExecStart=${file}  ${configtag}  /etc/${name}/${config}
Restart=always

[Install]
WantedBy=default.target

EOF
