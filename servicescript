echo "set service name"
read name
echo "set service file path"
read -r file
echo "set service configtag"
read -r configtag

mkdir -p "/etc/${name}"


cat << EOF >> "/etc/systemd/system/${name}.service"

[Unit]
Description=${name}
After=network.target

[Service]
ExecStart=${file}   ${configtag}  "/etc/${name}/"
Restart=always

[Install]
WantedBy=default.target

EOF
